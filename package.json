{
  "name": "gopassbridge",
  "version": "2.1.1",
  "description": "Gopass Bridge allows searching and inserting login credentials from the gopass password manager",
  "main": "web-extension/gopassbridge.js",
  "scripts": {
    "test": "npm run lint && npm run test:vitest",
    "test:vitest": "vitest run --coverage",
    "test:e2e": "./tests/e2e/run_docker.sh",
    "test:e2e:internal": "playwright test -c tests/e2e/setup/playwright.config.mjs",
    "lint": "npm run lint:biome && npm run lint:webext",
    "lint:webext": "web-ext -s firefox-release lint",
    "lint:biome": "biome check --error-on-warnings",
    "format": "biome check --write"
  },
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gopasspw/gopassbridge.git"
  },
  "keywords": [
    "gopass",
    "passwordmanager",
    "web-extension"
  ],
  "author": "Martin Hoefling",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gopasspw/gopassbridge/issues"
  },
  "homepage": "https://github.com/gopasspw/gopassbridge#readme",
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@playwright/test": "^1.58.1",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.18",
    "web-ext": "^9.2.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
