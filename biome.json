{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "*.json",
      "manifests/**",
      "tests/**",
      "!tests/unit/login_pages",
      "web-extension/**",
      "!web-extension/vendor"
    ]
  },
  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineEnding": "auto",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "indentWidth": 4,
      "trailingCommas": "es5",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "css": {
    "formatter": {
      "indentWidth": 4,
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["manifests/**"],
      "json": {
        "formatter": {
          "expand": "always"
        }
      }
    }
  ]
}
